@model TagPostViewModel;

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Cadastrar Tag</div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Tags", FormMethod.Post))
                    {
                        <div class="form-group row">
                            <label for="name" class="col-md-4 col-form-label text-md-right">Tag</label>
                            <div class="col-md-6">
                                <input asp-for="Tag" class="form-control" required autocomplete="tag" autofocus />
                                <span asp-validation-for="Tag" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>